@page "/addcustomer"
@using RealEstateManagement.Ui.ViewModels

<h3 class="mb-5">New customer</h3>


<EditForm Model="@CustomerViewModel" OnValidSubmit="@HandleValidSubmit">

    <DataAnnotationsValidator />
    <ValidationSummary></ValidationSummary>

    <div class="form-group row">
        <label for="name" class="col-sm-3">Customer name: </label>
        <InputText id="name" class="form-control col-sm-5" @bind-Value="@CustomerViewModel.FirstName" placeholder="Enter customer firstname"></InputText>
        <InputText id="name" class="form-control col-sm-5" @bind-Value="@CustomerViewModel.LastName" placeholder="Enter customer lastname"></InputText>
    </div>

    <button type="submit" class="submit-button mt-3">Save customer</button>
</EditForm>